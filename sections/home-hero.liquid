{{ 'homep-hero-section.css' | asset_url | stylesheet_tag }}

{% style %}
    #shopify-section-{{ section.id }} .homep-hero-section {
        background-image: url('{{ section.settings.background_image_desktop | img_url: "1920x" }}');
    }

    .home-hero-overlay {
        opacity: {{ section.settings.background_overlay_opacity | divided_by: 100.0 }};
    }

    @media only screen and (max-width: 768px) {
        #shopify-section-{{ section.id }} .homep-hero-section {
            background-image: url("{{ section.settings.background_image_mobile | image_url: "768px" }}");
        }
    }
{% endstyle %}

<div class="homep-hero-section">

    <div class="home-hero-overlay"></div>
    {% if section.settings.show_bottom_ornament %}
        {% render 'ornament-wave' %}
    {% endif %}
    <div class="padding-global">
        <div class="container-medium">
            <div class="home-hero-wrapper">
                {% for block in section.blocks %}
                    {% if block.type == 'review' %}
                        <div class="rating-stars-wrapper">
                            <div class="stars">
                                {% assign star_count = block.settings.stars | plus: 0 %}
                                {% for i in (1..star_count) %}
                                <img src="{{ 'star.svg' | asset_url }}" width="90px" height="18px" alt="star" class="star-icon" />
                                {% endfor %}
                            </div>
                            <div class="review-text">
                                <p>{{ block.settings.text }}</p>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
                {% if section.settings.heading %}
                 <h1 class="home-hero-heading">{{ section.settings.heading }}</h1>
                {% endif %}
                {% if section.settings.text %}
                    <p>{{ section.settings.text }}</p>
                {% endif %}
                <div class="buttons-box">
                    {% render 'primary-button', text: section.settings.primary_button_text, link: section.settings.primary_button_link %}
                    {% render 'secondary-button', text: section.settings.secondary_button_text, link: section.settings.secondary_button_link %}
                </div>
            </div>
        </div>
    </div>
</div>

{% schema %}
 {
  "name": "Home Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image_desktop",
      "label": "Background Image (Desktop)",
    },
    {
      "type": "image_picker",
      "id": "background_image_mobile",
      "label": "Background Image (Mobile)"
    },
    {
      "type": "range",
      "id": "background_overlay_opacity",
      "label": "Background Overlay Opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 40,
    },
    {
      "type": "checkbox",
      "id": "show_bottom_ornament",
      "label": "Show Bottom Ornament",
      "default": false
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Helping you start solids stress free"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "We simplify Starting Solids, helping you prepare nutritious meals and raise happy, healthy eatersâ€”drama-free!"
    },
    {
        "type": "color",
        "id": "text_color",
        "label": "Text Color",
        "default": "#FFFFFF",
    },
      
    {
      "type": "text",
      "id": "primary_button_text",
      "label": "Primary Button Text",
      "default": "Browse library"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Primary Button Link"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary Button Text",
      "default": "Shop products"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary Button Link"
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        {
          "type": "select",
          "id": "stars",
          "label": "Number of Stars",
          "default": "4",
          "options": [
            { "label": "1", "value": "1" },
            { "label": "2", "value": "2" },
            { "label": "3", "value": "3" },
            { "label": "4", "value": "4" },
            { "label": "5", "value": "5" }
          ]
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Review Text",
          "default": "+480 mothers are already using it"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Home Hero",
      "category": "Custom"
    }
  ]
}
{% endschema %}