<style>
  .custom-page-heading {
    max-width: 1280px;
    margin: 0 auto;
    padding: 40px 20px;
  }

  .custom-page-heading h2 {
    font-size: 32px;
    font-weight: 700;
    text-align: center;
    margin: 0;
  }
</style>

<div class="custom-page-heading">
  <h2>{{ section.settings.heading }}</h2>
</div>




{% schema %}
{
  "name": "Custom Page Heading",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to our custom page"
    }
  ],
  "presets": [
    {
      "name": "Custom Page Heading"
    }
  ]
}
{% endschema %}

