{% style %}
.page-section {
  padding: 40px 20px;
  max-width: 800px;
  margin: 0 auto;
  background-color: #f9f9f9;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}
.page-section h1 {
  font-size: 2.5rem;
  margin-bottom: 20px;
  color: #333;
  text-align: center;
}
.page-section .rte {
  font-size: 1.1rem;
  line-height: 1.6;
  color: #555;
  text-align: justify;
}
{% endstyle %}

<section class="page-section">
  <h1>{{ section.settings.heading }}</h1>
  <div class="rte">
    {{ section.settings.text }}
  </div>
</section>

{% schema %}
{
  "name": "Custom Page",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Welcome!" },
    { "type": "richtext", "id": "text", "label": "Text", "default": "<p>This is a custom page</p>" }
  ]
}
{% endschema %}
