{% style %}
.page-section {
  padding: 40px 20px;
  max-width: 1280px;
  margin: 0 auto;
}
.page-section h1 {
  font-size: 56px
}
.recipe-list {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 20px;
}
.recipe-card {
  background: white;
  padding: 20px;
  border-radius: 8px;
  box-shadow: 0 1px 4px rgba(0,0,0,0.1);
}
.recipe-card h2 {
  font-size: 1.3rem;
  margin-bottom: 10px;
}
.recipe-card p {
  color: #666;
}
{% endstyle %}


{% assign recipes = blog['recipes'] %}

<section class="page-section">
  <h1>{{ section.settings.heading }}</h1>
  <div class="recipe-list">
    {% for recipe in recipes.articles %}
      <div class="recipe-card">
        <h2>{{ recipe.title }}</h2>
        <a href="{{ recipe.url }}">Read more</a>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Popular Recipes",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to Popular Recipes"
    }
  ],
  "presets": [
    {
      "name": "Popular Recipes",
      "category": "Custom"
    }
  ]
}
{% endschema %}
