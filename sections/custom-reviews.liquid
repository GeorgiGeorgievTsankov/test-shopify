
<style>
    .custom-reviews-section {
      position: relative;
      width: 100%;
      max-width: 1440px;
      height: 573px;
      margin: 0 auto;
      background-size: cover;
      background-position: center;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      text-align: center;
      padding: 20px;
    }
  
    .custom-reviews-section h1 {
      font-size: 36px;
      margin-bottom: 10px;
    }
  
    .custom-reviews-section p {
      font-size: 18px;
      max-width: 800px;
    }
{% comment %}   
    @media (max-width: 767px) {
      .custom-reviews-section {
        height: auto;
        padding: 60px 20px;
      }
  
      .custom-reviews-section h1 {
        font-size: 28px;
      }
  
      .custom-reviews-section p {
        font-size: 16px;
      }
    } {% endcomment %}
  </style>
  






<div class="custom-reviews-section" style="background-image: url({{ section.settings.background_image_desktop| image_url: width: 1500 }});">
   <h1 style="color: {{ section.settings.text_color }};">{{ section.settings.heading }}</h1>
   <p style="color: {{ section.settings.text_color }};">{{ section.settings.text }}</p>
</div> 
    
  
  
  
{% schema %}
{
  "name": "Custom Reviews Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image_desktop",
      "label": "Background Image (Desktop)"
    },
    {
        "type": "text",
         "id": "heading",
        "label": "Heading",
        "default": "Welcome to Our Store"
    },
      {
        "type": "textarea",
        "id": "text",
        "label": "Paragraph Text",
        "default": "Discover our latest collections and offers!"
        
      },
],
  "presets": [
    {
      "name": "Custom Reviews Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}
