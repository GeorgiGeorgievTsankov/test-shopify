
<style>
    .section-custom-reviews-section {
      position: relative;
      width: 100%;
      max-width: 1440px;
      height: 623px;
      margin: 0 auto;
      background-size: cover;
      background-position: center;
      background: #FFFFFF;

    }
    .custom-reviews-section {
      position: relative;
      width: 100%;
      max-width: 1440px;
      height: 573px;
      margin: 0 auto;
      background-size: cover;
      background-position: center;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      text-align: center;
      padding: 20px;
    }
  
    .custom-reviews-section h1 {
      font-size: 36px;
      margin-bottom: 10px;
    }
  
    .custom-reviews-section p {
      font-size: 18px;
      max-width: 800px;
    }
    @media (max-width: 767px) {
        .custom-reviews-section {
          background-image: url({{ section.settings.background_image_mobile | image_url: width: 800 }});
        }
      }
    
      @media (min-width: 768px) {
        .custom-reviews-section {
          background-image: url({{ section.settings.background_image_desktop | image_url: width: 1500 }});
        }
      }

    .ornament-wave {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 67px;
        overflow: hidden;
        z-index: 2;
      }
      
  </style>
  




  <section class="section-custom-reviews-section">
    <div class="custom-reviews-section" 
         style="background-image: url({{ section.settings.background_image_desktop | image_url }});">
    
      {% if request.device_type == 'mobile' %}
        <div class="custom-reviews-section" 
             style="background-image: url({{ section.settings.background_image_mobile | image_url }});">
      {% else %}
        <div class="custom-reviews-section" 
             style="background-image: url({{ section.settings.background_image_desktop | image_url }});">
      {% endif %}
    
      <h1>{{ section.settings.heading }}</h1>
      <p>{{ section.settings.text }}</p>
  
      {% if section.settings.show_bottom_ornament %}
        {% render 'ornament-wave' %}
      {% endif %}
    </div>
  </section>
  
  
  

    
  
  
  
{% schema %}
{
  "name": "Custom Reviews Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image_desktop",
      "label": "Background Image (Desktop)"
    },
    {
      "type": "image_picker",
      "id": "background_image_mobile",
      "label": "Background Image (Mobile)"
    },
    {
      "type": "range",
      "id": "background_overlay_opacity",
      "label": "Background Overlay Opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 50
    },
    {
      "type": "checkbox",
      "id": "show_bottom_ornament",
      "label": "Show Bottom Ornament",
      "default": false
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "What our customers say"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Real feedback from happy clients."
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "text",
      "id": "primary_button_text",
      "label": "Primary Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Primary Button Link"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary Button Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary Button Link"
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        {
          "type": "select",
          "id": "stars",
          "label": "Number of Stars",
          "default": "5",
          "options": [
            { "label": "1", "value": "1" },
            { "label": "2", "value": "2" },
            { "label": "3", "value": "3" },
            { "label": "4", "value": "4" },
            { "label": "5", "value": "5" }
          ]
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Review Text",
          "default": "This product changed my life!"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Custom Reviews Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}
