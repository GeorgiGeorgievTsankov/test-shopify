{{ 'welcome-content-section.css' | asset_url | stylesheet_tag }}



<div class="welcome-content">
    
  <div class="welcome-image">
    <img src="{{ section.settings.welcome_image | image_url: small }}" alt="Welcome to Starting Solids Australia" />
  </div>
  <div class="welcome-text">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'heading' %}
          <h2 style="color: {{ block.settings.heading_color }};">{{ block.settings.text }}</h2>
        {% when 'paragraph' %}
          <p>{{ block.settings.text }}</p>
        {% when 'button' %}
            {% render 'secondary-button',
                text: block.settings.label_button,
                link: section.settings.secondary_button_link,
                bg_color: block.settings.button_color,
                text_color: block.settings.text_color
            %}  
      {% endcase %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Welcome Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "welcome_image",
      "label": "Welcome Image",
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Heading Text",
          "default": "Welcome to Starting Solids Australia"
        },
        {
            "type": "color",
            "id": "heading_color",
            "label": "Heading Color",
            "default": "#E49AA3"
          }
      ]
    },
    {
      "type": "paragraph",
      "name": "Paragraph",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Paragraph Text",
          "default": "Do you want to make starting solids easier every step of the way? Our team of paediatric health professionals have created the perfect products and resources to make Starting Solids a breeze.\nWe help you cut through the noise and misinformation that circulates around Starting Solids and make it simple for you to learn how to prepare quick, easy nutritious meals and raise happy, healthy intuitive eaters free from the baby and toddler feeding drama!"

        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "settings": [
        {
            "type": "text",
            "id": "label_button",
            "label": "Button Label",
            "default": "Learn More"
          },
          {
            "type": "url",
            "id": "secondary_button_link",
            "label": "Button Link"
          },
          {
            "type": "color",
            "id": "button_color",
            "label": "Button Background Color",
            "default": "#39A487"
          },
          {
            "type": "color",
            "id": "text_color",
            "label": "Button Text Color",
            "default": "#FFFFFF"
          }
      ]
    }
  ],
  "max_blocks": 5,
  "presets": [
    {
      "name": "Welcome to Starting Solids Australia",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "paragraph"
        },
        {
          "type": "button"
        }
      ]
    }
  ]
}
{% endschema %}
