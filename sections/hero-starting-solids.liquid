{{ 'hero-starting-solids-section.css' | asset_url | stylesheet_tag }}


{% style %}
  #shopify-section-{{ section.id }} .starting-solids-hero-section {
      background-image: url('{{ section.settings.background_image_desktop | img_url: "2048x" }}');
  }

  @media only screen and (max-width: 768px) {
      #shopify-section-{{ section.id }} .starting-solids-hero-section {
          background-image: url('{{ section.settings.background_image_mobile | img_url: "2048x" }}');
      }
  }  

{% endstyle %}




<div class="starting-solids-hero-section">
    <div class="starting-solids-inner content-large">
      <div class="starting-solids-box">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'text' %}
              <h1>{{ block.settings.heading }}</h1>
              <div class="text-1">{{ block.settings.text }}</div>
            {% when 'button' %}
              {% render 'secondary-button',
                text: block.settings.label_button,
                link: block.settings.secondary_button_link,
                bg_color: block.settings.button_color,
                text_color: block.settings.text_color
              %}
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
  

  {% schema %}
{
  "name": "Starting Solids Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image_desktop",
      "label": "Background Image (Desktop)"
    },
    {
      "type": "image_picker",
      "id": "background_image_mobile",
      "label": "Background Image (Mobile)"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Text Block",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Starting Solids Library."
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Subheading",
          "default": "Browse our library of information and recipes to guide you through getting started on solids. Some of our library is free or you can unlock the entire library by purchasing a subscription and  supporting us to grow the library."
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "id": "label_button",
          "label": "Button Label",
          "default": "Explore Library"
        },
        {
          "type": "url",
          "id": "secondary_button_link",
          "label": "Button Link"
        },
        {
          "type": "color",
          "id": "button_color",
          "label": "Button Background Color",
          "default": "#E49AA3"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Button Text Color",
          "default": "#FFFFFF"
        }
      ]
    }
  ],
"presets": [
  {
    "name": "Starting Solids Hero",
    "category": "Custom",
    "blocks": [
      { "type": "text" },
      { "type": "button" }
    ]
  }
]
}
{% endschema %}
