{{ 'our-approach-section.css' |asset_url | stylesheet_tag }}
  
<div class="our-approach-wrapper">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'text' %}
        <div class="our-approach-text">
          <h2>{{ block.settings.heading }}</h2>
          <p>{{ block.settings.text }}</p>
        </div>
    {% endcase %}
  {% endfor %}
  <div class="our-approach-image">
    <img class="our-approach" src="{{ images['our-approach.png'] | image_url: width: 800 }}" alt="our-approach" width="700" height="auto" />
  </div>
</div>

{% schema %}
{
  "name": "Our Approach",
  "tag": "section",
  "settings": [],
  "blocks": [
    {
      "type": "text",
      "name": "Text Block",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Our Approach"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "<p>We believe there is no one-size-fits-all approach to feeding babies. Every child is different, and we support parents in finding the best way to wean their baby with confidence.By encouraging responsive feeding methods, we help families create a joyful and healthy relationship with food, fostering positive connections and long-term healthy habits.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Our-Approach"
    }
  ]
}
{% endschema %}
